@model IEnumerable<Projekt.ViewModels.ZaposleniciRoleViewModel>

@{
    ViewBag.Title = "Zaposlenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<table class="table table-striped table-hover">
    <tr>

        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rola)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.Rola != "Admin")
        {
            <tr>

                <td>
                    @Html.ActionLink("Dodaj rolu", "DodajRolu", new { id = item.UserId }, htmlAttributes: new { @class = "btn btn-xs btn-default", @role = "button" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rola)
                </td>

            </tr>
        }

    }

</table>
    

